<div class="row">
  <div class="col-md-4">
    <%= form_for [@user, @item.new] do |f| %>
      <div class="form-group">
        <%= f.text_field :name, class: 'form-control', placeholder: "Enter item here" %>
      </div>
      <div class="form-group">
        <%= f.submit "Add item", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>